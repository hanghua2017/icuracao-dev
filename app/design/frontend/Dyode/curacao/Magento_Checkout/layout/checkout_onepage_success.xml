<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Success Page</title>
    </head>
    <body>
      <!-- google adwords starts -->
        <!-- <referenceBlock name="head.additional">
            <block name="Event.snippet" template="Magento_Checkout::event_snippet.phtml">
            <arguments>
                <argument name="view_model" xsi:type="object">Dyode\OrderDetails\ViewModel\Order\Success</argument>
            </arguments>
            </block>
        </referenceBlock> -->
        <!-- google adwords ends -->
        <referenceBlock name="page.main.title" remove="true">
            <block class="Magento\Checkout\Block\Onepage\Success" name="checkout.success.print.button" template="Magento_Checkout::button.phtml"/>
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Thank you for your purchase!</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <referenceBlock name="checkout.success">
                <arguments>
                    <argument name="view_model" xsi:type="object">Dyode\OrderDetails\ViewModel\Order\Success</argument>
                </arguments>
            </referenceBlock>
            <block class="Magento\Framework\View\Element\Template" name="guarantee.block" template="Magento_Theme::guarantee-block.phtml" after="home.banner.container"/>
            <block class="Magento\Framework\View\Element\Template" name="you.may.also.like" template="Magento_Checkout::success-page-you-may-also-like.phtml" after="guarantee-block"/>
            <block class="Magento\Framework\View\Element\Template" name="banner.full" template="Magento_Checkout::success-page-banner-full.phtml" after="you.may.also.like"/>

            <container htmlTag="div" htmlClass="category-slider-container">
              <block class="Magento\Framework\View\Element\Template" name="category" template="Magento_Checkout::success-page-category-slider.phtml" after="banner.full"/>
            </container>

            <block class="Magento\Framework\View\Element\Template" name="banner.double" template="Magento_Checkout::success-page-banner-double.phtml" after="category"/>
        </referenceContainer>

    </body>
</page>
