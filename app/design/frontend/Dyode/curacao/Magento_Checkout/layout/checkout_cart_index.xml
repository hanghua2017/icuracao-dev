<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.main.title">
            <block
                    class="Magento\Checkout\Block\Cart"
                    name="cart.item.count.title"
                    after="page.main.title"
                    template="Magento_Checkout::count_title.phtml"
                    cacheable="false"
            />
        </referenceContainer>

        <!-- REMOVED BLOCKS -->
        <referenceBlock name="cart.summary" remove="true" />
        <referenceBlock name="checkout.cart.crosssell" remove="true" />
    </body>

</page>