<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    <referenceBlock name="head.additional">
      <block class="Magento\Catalog\Block\Product\View" name="webcollage_script" template="webcollage_script.phtml"/>
    </referenceBlock>
        <referenceContainer name="content">
            <block name="products.soldout.msg" template="Magento_Catalog::product/view/soldoutmessage.phtml" before="-"/>
            <block name="soldout.related.product" template="Magento_Catalog::product/view/soldoutrelatedproducts.phtml" after="products.soldout.msg" />
            <container name="product.info-block" htmlTag="div" htmlClass="product-info-block" after="soldout.related.product">
                <referenceContainer name="product.info.main">
                    <block template="Magento_Catalog::product/view/price-beat.phtml" before="product.info.price">
                        <arguments>
                            <argument name="view_model" xsi:type="object">Dyode\Catalog\ViewModel\Frontend\Catalog\Product\View\PriceBeat</argument>
                        </arguments>
                    </block>

                    <referenceContainer name="product.info.price">
                        <block class="Magento\Catalog\Block\Product\View" name="product.info.emi" after="product.price.final" template="Magento_Catalog::product/view/info/emi.phtml">
                            <arguments>
                                <argument name="view_model" xsi:type="object">Dyode\Core\ViewModel\Emi</argument>
                            </arguments>
                        </block>
                    </referenceContainer>
                </referenceContainer>

                <referenceBlock name="product.info.addtocart">
                    <arguments>
                        <argument name="view_model" xsi:type="object">Dyode\Catalog\ViewModel\Frontend\Catalog\Product\View\Addtocart</argument>
                    </arguments>

                    <block name="product.warranty.options" as="warranty_options" template="Magento_Catalog::product/view/warranty-options.phtml">
                        <arguments>
                            <argument name="view_model" xsi:type="object">Dyode\Catalog\ViewModel\Frontend\Catalog\Product\View\Warranty</argument>
                        </arguments>

                        <block name="product.warranty.options.modal.details" template="Magento_Catalog::product/view/modal/warranty-details.phtml" />

                        <block class="Magento\Catalog\Block\Product\View" name="product.warranty.options.modal.addtocart" template="Magento_Catalog::product/view/modal/warranty-addtocart.phtml">
                            <block class="Magento\Catalog\Block\Product\View" name="warranty.modal.review" as="warranty_modal_review" template="Magento_Catalog::product/view/review.phtml" />

                            <block template="Magento_Catalog::product/view/warranty-options.phtml" name="product.warranty.modal.options" as="warranty_modal_options">
                                <arguments>
                                    <argument name="is_modal" xsi:type="boolean">true</argument>
                                    <argument name="view_model" xsi:type="object">Dyode\Catalog\ViewModel\Frontend\Catalog\Product\View\Warranty</argument>
                                </arguments>
                            </block>
                        </block>
                    </block>

                    <block name="product.info.store.availability" as="store_availability" template="Magento_Catalog::product/view/store-availability.phtml">
                        <arguments>
                            <argument name="view_model" xsi:type="object">Dyode\Catalog\ViewModel\Frontend\Catalog\Product\View\StoreAvailability</argument>
                        </arguments>
                    </block>
                </referenceBlock>

                <referenceBlock name="product.info.addtocart.additional">
                    <arguments>
                        <argument name="view_model" xsi:type="object">Dyode\Catalog\ViewModel\Frontend\Catalog\Product\View\Addtocart</argument>
                    </arguments>

                    <block name="product.info.warranty.options" as="warranty_options" template="Magento_Catalog::product/view/warranty-options.phtml">
                        <arguments>
                            <argument name="view_model" xsi:type="object">Dyode\Catalog\ViewModel\Frontend\Catalog\Product\View\Warranty</argument>
                        </arguments>

                        <block name="product.info.warranty.options.modal.details" template="Magento_Catalog::product/view/modal/warranty-details.phtml" />

                        <block class="Magento\Catalog\Block\Product\View" name="product.info.warranty.options.modal.addtocart" template="Magento_Catalog::product/view/modal/warranty-addtocart.phtml">
                            <block class="Magento\Catalog\Block\Product\View" name="warranty.addtocart.modal.review" as="warranty_modal_review" template="Magento_Catalog::product/view/review.phtml" />

                            <block name="product.info.warranty.modal.options" as="warranty_modal_options" template="Magento_Catalog::product/view/warranty-options.phtml">
                                <arguments>
                                    <argument name="is_modal" xsi:type="boolean">true</argument>
                                    <argument name="view_model" xsi:type="object">Dyode\Catalog\ViewModel\Frontend\Catalog\Product\View\Warranty</argument>
                                </arguments>
                            </block>
                        </block>
                    </block>

                    <block name="product.addtocart.additional.store.availability" as="store_availability" template="Magento_Catalog::product/view/store-availability.phtml">
                        <arguments>
                            <argument name="view_model" xsi:type="object">Dyode\Catalog\ViewModel\Frontend\Catalog\Product\View\StoreAvailability</argument>
                        </arguments>
                    </block>
                </referenceBlock>

                <block class="Magento\Catalog\Block\Product\View" name="freq-bought" template="Magento_Catalog::product/view/frequently-bought.phtml" after="product.info.media">
                    <arguments>
                        <argument name="view_model" xsi:type="object">Dyode\Catalog\ViewModel\Frontend\Catalog\Product\View\Fbt</argument>
                    </arguments>
                </block>
            </container>
            <container name="product.info.details.before" htmlTag="div" htmlClass="product-info-details-before" before="product.info.details" />
            <container name="product.info.details.after" htmlTag="div" htmlClass="banner-block" after="product.info.details">
              <block class="Magento\Catalog\Block\Product\View" name="webcollage" template="Magento_Catalog::webcollage.phtml"/>
              <block class="Magento\Catalog\Block\Product\View" name="cnet" template="Magento_Catalog::cnet.phtml"/>
              <block class="Magento\Catalog\Block\Product\View" name="flix" template="Magento_Catalog::flix.phtml"/>
                <block class="Magento\Cms\Block\Block" name="offers.of.this.week.1">
                    <arguments>
                        <argument name="block_id" xsi:type="string">offers_of_the_week_1</argument>
                    </arguments>
                </block>
                <block class="Magento\Reports\Block\Product\Widget\Viewed" after="todays.deals" name="recently_viewed" cacheable="false" template="Magento_Reports::widget/viewed/content/viewed_grid.phtml">
                    <action method="setPageSize">
                        <argument name="page_size" xsi:type="number">10</argument>
                    </action>
                </block>
                <block class="Magento\Cms\Block\Block" name="offers.of.this.week.2">
                    <arguments>
                        <argument name="block_id" xsi:type="string">offers_of_the_week_2</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>

        <!-- MOVING BLOCKS -->
        <move element="product.info.main" destination="product.info-block" before="-" />
        <move element="product.info.media" destination="product.info-block" after="product.info.main" />
        <move element="product.info.upsell" destination="product.info.details.before" />
        <move element="product.info.stock.sku" destination="page.main.title" />
        <move element="product.info.review" destination="page.main.title" after="product.info.price" />


        <!-- REMOVED BLOCKS -->
        <!-- <referenceBlock name="product.info.sku" remove="true"/> -->
        <!-- <referenceContainer name="product.info.stock.sku" remove="true" /> -->
        <referenceBlock name="product.info.mailto" remove="true" />
        <referenceBlock name="catalog.product.related" remove="true" />


    </body>
</page>
