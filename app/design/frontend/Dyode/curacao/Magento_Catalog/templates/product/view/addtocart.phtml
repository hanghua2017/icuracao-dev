<script>
require([
      'jquery',

  ], function($)
     {
       $('#warranty-check').click(function(e) {
         e = e || event;
         var cb = e.srcElement || e.target;
         if (cb.type !== 'checkbox') {
            return true;
          }
          var cbxs = document.getElementById('warranty-check').getElementsByTagName('input'), i=cbxs.length;
          while(i--) {
            if (cbxs[i].type && cbxs[i].type == 'checkbox' && cbxs[i].id !== cb.id) {
                cbxs[i].checked = false;
            }
          }
        });
        $('#warranty-check2').click(function(e) {
          e = e || event;
          var cb = e.srcElement || e.target;
          if (cb.type !== 'checkbox') {
             return true;
           }
           var cbxs = document.getElementById('warranty-check').getElementsByTagName('input'), i=cbxs.length;
           while(i--) {
             if (cbxs[i].type && cbxs[i].type == 'checkbox' && cbxs[i].id !== cb.id) {
                 cbxs[i].checked = false;
             }
           }
         });


      }
    );
</script>
<script>
require([
      'jquery',

  ], function($)
     {
       // pop up functionality for addtocart and warranty
       popUp("addtocartModal","product-addtocart-button","close1");
       popUp("warrantyModal","warranty-link1","close2");
       popUp("warrantyModal","warranty-link2","close2");

       function popUp(modelID, btnID ,closebtn){
         var modal = document.getElementById(modelID);
         var btn = document.getElementById(btnID);
         var span = document.getElementsByClassName(closebtn)[0];

         btn.onclick = function(e) {
            e.preventDefault();
             modal.style.display = "block";
         }
         span.onclick = function() {
             modal.style.display = "none";
         }
         window.onclick = function(event) {
             if (event.target == modal) {
                 modal.style.display = "none";
             }
         }

       }
      }
    );

</script>
