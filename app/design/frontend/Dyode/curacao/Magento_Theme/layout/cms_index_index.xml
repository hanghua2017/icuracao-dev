<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
      <referenceContainer name="content">
        <container name='home.banner.container' htmlTag="div" htmlClass="banner-container" before="-">
          <block class="Magestore\Bannerslider\Block\Bannerslider" name="bannerslider.cms.page.content.top" before="-">
            <action method="setPosition">
              <argument name="position" xsi:type="string">cms-page-content-top</argument>
            </action>
          </block>
          <block class="Magestore\Bannerslider\Block\Bannerslider" name="bannerslider.popup.on.homepage">
              <action method="setPopupOnHomePage" />
          </block>
          <block class="Magento\Framework\View\Element\Template" name="side.banner" template="Magento_Theme::side-banner.phtml" after="bannerslider.cms.page.content.top"/>
        </container>
        <block class="Magento\Framework\View\Element\Template" name="guarantee.block" template="Magento_Theme::guarantee-block.phtml" after="home.banner.container"/>
        <block class="Magento\Framework\View\Element\Template" name="todays.deals" template="Magento_Theme::todays-deals.phtml" after="guarantee.block"/>
      </referenceContainer>
    </body>
</page>
