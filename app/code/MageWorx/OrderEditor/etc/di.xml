            <argument name="collections" xsi:type="array">
                <item name="ordereditor_select_customer_listing_data_source" xsi:type="string">Magento\Customer\Model\ResourceModel\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
</config>
