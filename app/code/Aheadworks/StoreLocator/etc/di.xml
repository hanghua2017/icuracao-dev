<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Aheadworks\StoreLocator\Api\LocationRepositoryInterface"
                type="Aheadworks\StoreLocator\Model\ResourceModel\LocationRepository" />
    <preference for="Aheadworks\StoreLocator\Api\LocationManagementInterface"
                type="Aheadworks\StoreLocator\Model\LocationManagement" />
    <preference for="Aheadworks\StoreLocator\Api\Data\LocationInterface" type="Aheadworks\StoreLocator\Model\Data\Location" />
    <preference for="Aheadworks\StoreLocator\Api\Data\LocationImageInterface" type="Aheadworks\StoreLocator\Model\Data\LocationImage" />
    <preference for="Aheadworks\StoreLocator\Api\Data\ValidationResultsInterface"
                type="Aheadworks\StoreLocator\Model\Data\ValidationResults" />
    <preference for="Aheadworks\StoreLocator\Api\Data\LocationSearchResultsInterface"
                type="Magento\Framework\Api\SearchResults" />

    <!-- Plugins -->

    <!-- Location Grid -->
    <type name="Aheadworks\StoreLocator\Model\ResourceModel\Location\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">aw_storelocator_location</argument>
            <argument name="resourceModel" xsi:type="string">Aheadworks\StoreLocator\Model\ResourceModel\Location</argument>
        </arguments>
    </type>
    <virtualType name="LocationGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Aheadworks\StoreLocator\Model\ResourceModel\Location\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">StoreLocatorGridFilterPool</argument>
        </arguments>
    </virtualType>

    <virtualType name="StoreLocatorGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="location_listing_data_source" xsi:type="string">Aheadworks\StoreLocator\Model\ResourceModel\Location\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
</config>
