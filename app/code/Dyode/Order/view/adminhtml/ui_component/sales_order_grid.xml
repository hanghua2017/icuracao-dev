<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <settings>
        <buttons>
            <button name="add">
                <url path="sales/order_create/start"/>
                <class>disabled</class>
                <label translate="true"></label>
            </button>
        </buttons>
    </settings>

    <columns name="sales_order_columns">
      <!-- add estimate number column in orders grid -->
        <column name="estimate_number" class="Dyode\Order\Ui\Component\Listing\Column\EstimateNumber">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="label" xsi:type="string" translate="true">Estimate Number</item>
                </item>
            </argument>
        </column>
        <!-- add curacao id column in orders grid -->
        <column name="curacao_id" class="Dyode\Order\Ui\Component\Listing\Column\CuracaoId">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="label" xsi:type="string" translate="true">Curacao Id</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>
