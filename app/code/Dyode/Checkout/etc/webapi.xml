<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/guest-carts/:cartId/curacao/collect-totals" method="GET">
        <service class="Dyode\Checkout\Api\CreditManagementInterface" method="applyCuracaoCreditInTotals"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/guest-carts/:cartId/curacao/remove-totals" method="GET">
        <service class="Dyode\Checkout\Api\CreditManagementInterface" method="removeCuracaoCreditFromTotals"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/guest-carts/:cartId/custom-shipping-info" method="POST">
        <service class="Dyode\Checkout\Api\GuestShippingInfoInterface" method="saveAddressInformation"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/carts/mine/custom-shipping-info" method="POST">
        <service class="Dyode\Checkout\Api\ShippingInfoManagementInterface" method="saveAddressInformation"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
</routes>
