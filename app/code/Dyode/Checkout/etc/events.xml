<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
	<event name="checkout_onepage_controller_success_action">
		<observer name="createCustomerAfterOrderPlaced" instance="Dyode\Checkout\Observer\Sales\CreateCustomerAfter" />
	</event>
	<event name="sales_order_payment_place_start">
		<observer name="updateOrderTotalBeforePlaceOrder" instance="Dyode\Checkout\Observer\Order\UpdateTotals" />
	</event>
	<event name="sales_order_payment_place_end">
		<observer name="correctOrderTotalDue" instance="Dyode\Checkout\Observer\Order\CorrectOrderTotalDue" />
	</event>
</config>
