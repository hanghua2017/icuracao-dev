<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/storepickup/storelocation" method="POST">
        <service class="Dyode\CheckoutDeliveryMethod\Api\StorePickupInterface" method="selection"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="zipcode" force="true">%zipcode%</parameter>
        </data>
    </route>
 

      <!-- Managing shipping guest information -->
    <route url="/V1/guest-carts/:cartId/custom-shipping-info" method="POST">
        <service class="Magento\Checkout\Api\GuestShippingInfoInterface" method="saveAddressInformation"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
