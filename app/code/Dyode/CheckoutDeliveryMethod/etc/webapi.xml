<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/storepickup/storelocation" method="POST">
        <service class="Dyode\CheckoutDeliveryMethod\Api\StorePickupInterface" method="selection"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="zipcode" force="true">%zipcode%</parameter>
        </data>
    </route>
    <!-- API Route for storing delivery method for each item  -->
    <route url="/V1/carts/:cartId/updateDeliveryType" method="POST">
		<service class="Dyode\DeliveryMethod\Api\DeliveryMethodManagementInterface" method="updateDeliveryMethodOnQuote"/>
			<resources>
				<resource ref="Magento_Cart::manage"/>
                <resource ref="anonymous"/>
			</resources>
	</route>
</routes>
