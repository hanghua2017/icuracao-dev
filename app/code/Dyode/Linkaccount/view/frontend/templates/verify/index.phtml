<script>
     require([
          "jquery",
          "mage/calendar"
     ], function($,calendar){
         $("#calendar_inputField").calendar({
              buttonText:"<?php echo __('Select Date') ?>",
              dateFormat: "yy-mm-dd"
         });
         $("#ssn-verify").keypress(function(e){
