           });
           $("#link_zipcode").keypress(function(e){
               var keyCode = e.which;
               if ( (keyCode != 8 || keyCode ==32 ) && (keyCode < 48 || keyCode > 57)) {
                 return false;
               }
            });
           $("#link_maiden").keypress(function(e){
               var keyCode = e.which;
               if ( !( (keyCode >= 65 && keyCode <= 90)
                 || (keyCode >= 97 && keyCode <= 122) )
                 && keyCode != 8 && keyCode != 32) {
                 e.preventDefault();
               }
            });
       });
</script>
