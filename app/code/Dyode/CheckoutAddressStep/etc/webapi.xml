<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/guest-carts/:cartId/update-shipping-methods" method="POST">
        <service class="Dyode\CheckoutAddressStep\Api\GuestShipmentEstimationInterface" method="estimateByExtendedAddress"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/carts/mine/update-shipping-methods" method="POST">
        <service class="Dyode\CheckoutAddressStep\Api\ShipmentEstimationInterface" method="estimateByExtendedAddress"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <!-- Managing My shipping information -->
    <route url="/V1/carts/mine/custom-shipping-information" method="POST">
        <service class="Dyode\CheckoutAddressStep\Api\ShippingInformationManagementInterface" method="saveAddressInformation"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

</routes>
