<?xml version="1.0" encoding="UTF-8"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="Dyode_CategoryNameWidget" class="Dyode\CategoryNameWidget\Block\Widget\CategoryNameWidget">
        <label translate="true">Category Name Widget</label>
        <description>Store Default 1st level Category List Widget</description>
        <parameters>
            <parameter name="blocktitle" xsi:type="text"  visible="true" required="false" sort_order="1">
                <label translate="true">Block Title</label>
            </parameter>
          <parameter name="parentcat" xsi:type="block" visible="true" required="true" sort_order="10">
                <label translate="true">Categories</label>
                <description translate="true">Category must have image uploaded</description>
                <block class="Dyode\CategoryNameWidget\Block\Adminhtml\Chooser" />
            </parameter>
        </parameters>
    </widget>
</widgets>
